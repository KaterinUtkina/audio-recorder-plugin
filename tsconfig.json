{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
  },
  "include": ["src/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "build", "dist"]
}